<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #005c8a, #003d5b);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="900.0" style="-fx-background-color: #003d5b;">
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10;" text="Available Courses" />
    </HBox>
    <VBox alignment="CENTER_LEFT" layoutX="230.0" layoutY="90.0" prefHeight="450.0" prefWidth="650.0" spacing="15">
        
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Search Courses" />
        <TextField fx:id="searchField" prefWidth="500.0" promptText="Enter course name or ID" style="-fx-background-radius: 10; -fx-padding: 5;" />
        <Button fx:id="searchButton" style="-fx-background-color: #0084b4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Search" />
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Available Courses" />
        
        <TableView fx:id="coursesTable" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: #e3f2fd; -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colCourseID" prefWidth="150.0" text="Course ID" />
                <TableColumn fx:id="colCourseName" prefWidth="250.0" text="Course Name" />
                <TableColumn fx:id="colCredits" prefWidth="100.0" text="Credits" />
                <TableColumn fx:id="colInstructor" prefWidth="200.0" text="Instructor" />
            </columns>
        </TableView>
    </VBox>
   <VBox alignment="CENTER" layoutX="14.0" layoutY="90.0" prefWidth="200.0" spacing="15" style="-fx-background-color: #004f70; -fx-background-radius: 10; -fx-padding: 20;">
      <children>
         <Button prefHeight="30.0" prefWidth="177.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Profile" />
         <Button prefHeight="30.0" prefWidth="210.0" style="-fx-background-color: #0084b4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="View Courses" />
         <Button prefHeight="30.0" prefWidth="180.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Register for Courses" />
         <Button prefHeight="30.0" prefWidth="236.0" style="-fx-background-color: #005c8a; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="View Academic Record" />
         <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-cursor: hand;" text="Logout" />
      </children>
   </VBox>
</AnchorPane>
